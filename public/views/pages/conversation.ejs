<a-entity position="4.43285 1.47088 0" rotation="0 -90 0" id="conversation">
  <a-entity id="conversation_wall" position="-0.13949 -0.71838 0">
    <% var i = 0; if (conversations) { %>
      <% conversations.forEach (function (conversation){ i+=1 %> 
        <a-entity kotak-conversation 
          conversation_id="<%= conversation.id %>" 
          class="clickable"
          spawn-chat-button
          nama_penerima="
          <%if (conversation.user1.id == user_id){%>
            <%=conversation.user2.name%> 
          <% } else {%>
            <%=conversation.user1.name%> 
          <%}  %> 
          "
          id="<%=conversation.id%>-conversation" 
          material="color:green"
          geometry="primitive: box; height:0.2; width:2; depth:0.1;" 
          position="0 <%=i*0.3 %> 0" color="#4CC3D9" 
          >
        </a-entity>
        <a-text
        text="color:white; align: center; value:
          <%if (conversation.user1.id == user_id){%>
            <%=conversation.user2.name%> 
          <% } else {%>
            <%=conversation.user1.name%> 
          <%}  %> 
        "
        position="0 <%=i*0.3 %> 0.05">
      </a-text>
      <% }) } %>
  </a-entity>
  <a-entity class="clickable" id="title" text-geometry="value: Conversation" position="-1 2 0" material="color:yellow; shader: flat"></a-entity>
  <a-entity id="search_conversation" position="1.572 0.33592 0">
    <a-box class="clickable" search-user-button="" color="yellow" position="1 0 -0.1" material=""  geometry="height:0.4; depth: 0.1" > </a-box>
    <a-entity id="conversation-searchuser" textarea="backgroundColor: blue; color: white;cols: 20; rows: 4;" class="clickable"  geometry="primitive:plane;height:0.3; width:0.9" material="color: blue"  position="0 0 -0.1"></a-entity>
    <a-text class="clickable" text="value: Search; align: center" position="1 0 0"></a-text>
  </a-entity>
</a-entity>
